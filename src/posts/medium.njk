---
pagination:
  data: medium.posts
  size: 1
  alias: item
permalink: post/{{ item.title | slug }}/index.html
title: {{ item.title }}

---

<div class="banner">
  <div class="m9-container">
      <h1>{{ item.title }}</h1>
  </div>
</div>
<div class="m9-container">

  <p class="meta">
      Published on {{ item.pubDate }} on <a href="{{ item.link }}" target="_blank">dev.to</a>
  </p>
  <div class="post-content">
    {{ item['content']  | safe }}
  </div>
</div>

